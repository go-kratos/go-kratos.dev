---
type LinkVariant = 'card' | 'footer' | 'nav';

interface Props {
  variant: LinkVariant;
  href: string;
  class?: string;
}

const { variant, href, class: className } = Astro.props;
// Shared styles
const baseStyles = 'no-underline transition-colors duration-200';

// Variant-specific styles
const variants = {
  card: `text-base font-medium link-card ${baseStyles}`,
  footer: `text-sm link-footer ${baseStyles}`,
  nav: `text-base font-normal link-nav ${baseStyles}`
} as const;
---

<a href={href} class={`${variants[variant]} ${className || ''}`}>
  <slot />
</a>

<style>
  .link-card {
    color: var(--genkit-primary);
  }
  
  .link-card:hover {
    color: var(--text-primary);
  }
  
  .link-nav {
    color: var(--text-muted);
  }
  
  .link-nav:hover {
    color: var(--text-primary);
  }
  
  .link-footer {
    color: var(--text-muted);
  }
  
  .link-footer:hover {
    color: var(--text-primary);
  }
</style>
